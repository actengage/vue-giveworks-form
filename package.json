{
  "name": "vue-giveworks-form",
  "version": "0.1.68",
  "description": "A Vue.js component for building and submitting Giveworks form.",
  "main": "dist/giveworks-form.js",
  "module": "dist/giveworks-form.es.js",
  "author": "Justin Kimbrell",
  "license": "MIT",
  "dependencies": {
    "@objectivehtml/broadcast": "^0.2.0",
    "axios": "^0.17.1",
    "lodash-es": "^4.17.4",
    "moment": "^2.20.1",
    "payment": "^2.3.0",
    "the-one-true-form": "^1.1.8",
    "vue": "^2.5.3",
    "vue-awesome": "^2.3.4"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "node-sass": "^4.7.2",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-conditional": "^1.1.1",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-root-import": "^0.2.2",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-vue": "^3.0.0",
    "sass-loader": "^6.0.6",
    "uglify-es": "^3.3.4",
    "vue-template-compiler": "^2.5.13"
  },
  "scripts": {
    "build": "rollup -c --watch",
    "build-library": "rollup -c;",
    "build-vendor": "rollup -c rollup.vendor.js;",
    "build-es2015": "rollup -c -f es -o dist/giveworks-form.es.js;",
    "commit": "git add -A && git commit -m $npm_package_version;",
    "release-patch": "npm version patch --no-git-tag-version; npm run release;",
    "release-minor": "npm version minor --no-git-tag-version; npm run release;",
    "release-major": "npm version major --no-git-tag-version; npm run release;",
    "release": "npm run build-library; npm run build-es2015; npm run build-vendor; npm run uglify; npm run commit; npm publish;",
    "uglify": "npm run uglify-library; npm run uglify-es2015; npm run uglify-vendor;",
    "uglify-vendor": "./node_modules/.bin/uglifyjs dist/vendor.js -o dist/vendor.min.js;",
    "uglify-library": "./node_modules/.bin/uglifyjs dist/giveworks-form.js -o dist/giveworks-form.min.js;",
    "uglify-es2015": "./node_modules/.bin/uglifyjs dist/giveworks-form.es.js -o dist/giveworks-form.es.min.js;"
  }
}
